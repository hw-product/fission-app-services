:ruby
  id = 'services'
  content_for(:container) do
    render(
      :partial => 'layouts/panel',
      :locals => {
        :id => id,
        :heading => 'Services',
        :panel_content => render(
          :partial => 'layouts/table',
          :locals => {
            :header_data => ['Services'],
            :data => @services.map{|service|
              [link_to(service.name, edit_admin_service_path(service.id))]
            }
          }
        )
      }
    )
  end

= render(:partial => 'layouts/container', :locals => {:container_class => "#{id}-services-list", :container_id => id})
