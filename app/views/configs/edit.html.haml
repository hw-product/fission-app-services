:ruby
  id = 'edit-account-config'
  content_for(:container) do
    render(
      :partial => 'layouts/panel',
      :locals => {
        :id => id,
        :heading => "Edit Account Config: #{@config.name}",
        :panel_content => render(
          :partial => 'form',
          :locals => {
            :form_opts => {
              :url => config_path(@config.id),
              :method => :put
            }
          }
        )
      }
    )
  end

= render(:partial => 'layouts/container', :locals => {:container_class => "#{id}-form", :container_id => id})
